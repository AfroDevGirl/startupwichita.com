<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet">

<script type='text/css'>
  @import url(http://fonts.googleapis.com/css?family=Lato:400,700);
  body
  {
      font-family: 'Lato', 'sans-serif';
      }
  .profile 
  {
      min-height: 355px;
      display: inline-block;
      }
  figcaption.ratings
  {
      margin-top:20px;
      }
  figcaption.ratings a
  {
      color:#f1c40f;
      font-size:11px;
      }
  figcaption.ratings a:hover
  {
      color:#f39c12;
      text-decoration:none;
      }
  .divider 
  {
      border-top:1px solid rgba(0,0,0,0.1);
      }
  .emphasis 
  {
      border-top: 4px solid transparent;
      }
  .emphasis:hover 
  {
      border-top: 4px solid #1abc9c;
      }
  .emphasis h2
  {
      margin-bottom:0;
      }
  span.tags 
  {
      background: #1abc9c;
      border-radius: 2px;
      color: #f5f5f5;
      font-weight: bold;
      padding: 2px 4px;
      }
  .dropdown-menu 
  {
      background-color: #34495e;    
      box-shadow: none;
      -webkit-box-shadow: none;
      width: 250px;
      margin-left: -125px;
      left: 50%;
      }
  .dropdown-menu .divider 
  {
      background:none;    
      }
  .dropdown-menu>li>a
  {
      color:#f5f5f5;
      }
  .dropup .dropdown-menu 
  {
      margin-bottom:10px;
      }
  .dropup .dropdown-menu:before 
  {
      content: "";
      border-top: 10px solid #34495e;
      border-right: 10px solid transparent;
      border-left: 10px solid transparent;
      position: absolute;
      bottom: -10px;
      left: 50%;
      margin-left: -10px;
      z-index: 10;
  }
</script>

<div class="container">

  <% unless @people.blank? %>
    
    <% @people.in_groups_of(2).each do |people| %>
      
      <div class="row">

        <% people.each do |person| %>
          <% if person %>

            <div class="col-md-6">
              <div class="well profile">
                <div class="col-sm-12">
                  <div class="col-xs-12 col-sm-8">
                    <h2><%= "#{person.first_name} #{person.last_name}" %></h2>
                    <p><strong></strong> <%= person.bio %> </p>
                    <% if person.skill_list && person.skill_list.size > 0 %>
                      <p><strong>Skills: </strong>
                        <% person.skill_list.each do |skill| %>
                          <span class="tags"><%= skill %></span>
                        <% end %>
                      </p>
                    <% end %>
                    <% if person.interest_list && person.interest_list.size > 0 %>
                      <p><strong>Interests: </strong>
                        <% person.interest_list.each do |interest| %>
                          <span class="tags"><%= interest %></span>
                        <% end %>
                      </p>
                    <% end %>
                  </div>
                  <div class="col-xs-12 col-sm-4 text-center">
                    <figure>
                      <img src="<%= profile_image(person) %>" alt="" class="img-circle img-responsive">

                      <% if false # hide ratings %>
                      
                        <figcaption class="ratings">
                          <p>Ratings
                            <a href="#">
                            <span class="fa fa-star"></span>
                            </a>
                            <a href="#">
                            <span class="fa fa-star"></span>
                            </a>
                            <a href="#">
                            <span class="fa fa-star"></span>
                            </a>
                            <a href="#">
                            <span class="fa fa-star"></span>
                            </a>
                            <a href="#">
                            <span class="fa fa-star-o"></span>
                            </a> 
                          </p>
                        </figcaption>
                      
                      <% end %>

                    </figure>
                  </div>
                </div>

                <% if false # hide ratings %>

                  <div class="col-xs-12 divider text-center">
                    <div class="col-xs-12 col-sm-4 emphasis">
                      <h2><strong> 20,7K </strong></h2>
                      <p><small>Followers</small></p>
                      <button class="btn btn-success btn-block"><span class="fa fa-plus-circle"></span> Follow </button>
                    </div>
                    <div class="col-xs-12 col-sm-4 emphasis">
                      <h2><strong>245</strong></h2>
                      <p><small>Following</small></p>
                      <button class="btn btn-info btn-block"><span class="fa fa-user"></span> View Profile </button>
                    </div>
                    <div class="col-xs-12 col-sm-4 emphasis">
                      <h2><strong>43</strong></h2>
                      <p><small>Snippets</small></p>
                      <div class="btn-group dropup btn-block">
                        <button type="button" class="btn btn-primary"><span class="fa fa-gear"></span> Options </button>
                        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                        <span class="caret"></span>
                        <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu text-left" role="menu">
                          <li><a href="#"><span class="fa fa-envelope pull-right"></span> Send an email </a></li>
                          <li><a href="#"><span class="fa fa-list pull-right"></span> Add or remove from a list  </a></li>
                          <li class="divider"></li>
                          <li><a href="#"><span class="fa fa-warning pull-right"></span>Report this user for spam</a></li>
                          <li class="divider"></li>
                          <li><a href="#" class="btn disabled" role="button"> Unfollow </a></li>
                        </ul>
                      </div>
                    </div>
                  </div>

                <% end %>
                
                <div style='clear:both;'></div>
              </div>
            </div>

          <% end %>
        <% end %>
      
      </div>

    <% end %>

  <% else %>
    
    <div class="alternate">
      <p class="row">
        No people added yet.
      </p>
    </div>
  
  <% end %>
</div>


<%= link_to 'New Person', new_person_path %>



<% if false %>

              <section>
                <div class="form-inline util-bar">
                  <%= link_to new_person_path, :class => "btn pull-right" do %>
                    Add Person <i class="glyphicon glyphicon-plus"></i>
                  <% end %>
                </div>

                <% unless @people.blank? %>
                  <ul class="alternate list-unstyled">

                    <% @people.each do |person| %>
                      <li data-ng-repeat="person in people">
                        <div class="row">
                          <h2 class="robotoSlab">
                            <%= link_to person_path(person) do %>
                              <%= person.title %>
                            <% end %>
                          </h2>
                          <div class="col-md-2">
                            <span>
                              <%= person.starts_at %><br/>
                              <%= person.ends_at %><br/>
                            </span>
                          </div>
                          <div class="col-md-10">
                            <p class="description">
                              <%= person.content %>
                            </p>
                          </div>
                        </div>
                      </li>
                    <% end %>

                  </ul>
                <% else %>
                  <div class="alternate">
                    <p class="row">
                      No people added yet.
                    </p>
                  </div>
                <% end %>
              </section>


              <h1>Listing people</h1>

              <table>
                <thead>
                  <tr>
                    <th>User</th>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Email</th>
                    <th>Website</th>
                    <th>Company name</th>
                    <th>Title</th>
                    <th>Twitter username</th>
                    <th>Bio</th>
                    <th>Avatar</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @people.each do |person| %>
                    <tr>
                      <td><%= person.user %></td>
                      <td><%= person.first_name %></td>
                      <td><%= person.last_name %></td>
                      <td><%= person.email %></td>
                      <td><%= person.website %></td>
                      <td><%= person.company_name %></td>
                      <td><%= person.title %></td>
                      <td><%= person.twitter_username %></td>
                      <td><%= person.bio %></td>
                      <td><%= person.avatar %></td>
                      <td><%= link_to 'Show', person %></td>
                      <td><%= link_to 'Edit', edit_person_path(person) %></td>
                      <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>

              <br>

<% end %>


