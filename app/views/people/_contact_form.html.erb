<div class="row">
    <%= form_tag "/people/" + user.id.to_s + "/contact",  :html => { :class => 'form-horizontal' } do %>

        <div class="form-group">
            <%= label_tag :name, nil, :class => "col-md-3 control-label" %>
            <div class="col-md-9">
                <%= text_field_tag :name, nil, :required => true, :class => "form-control" %>
            </div>
        </div>

        <div class="form-group">
            <%= label_tag :message, nil, :class => "col-md-3 control-label" %>
            <div class="col-md-9">
                <%= text_area_tag :message, nil, :required => true, :class => "form-control" %>
            </div>
        </div>

        <div class= "hidden">
            <%= text_field_tag :nickname, nil, :hint => 'Leave this field blank!' %>
        </div>

        <div class="form-group">
            <div class="col-md-9">
                <%= submit_tag "Send Message", :class => "btn btn-primary" %>
            </div>
        </div>
    <% end %>
</div>
