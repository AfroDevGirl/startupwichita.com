<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel">
          <div class="row-fluid user-row">
            <%= image_tag("tophandlogo-02.png") %>
          </div>
        </div>
        <div class="panel-body">
          <%= form_for resource, as: resource_name, url: registration_path(resource_name), :html => {class: "form-signin"} do |f| %>
            <fieldset>
              <label class="panel-login">
                <div class="login_result"></div>
              </label>

              <%= f.email_field :email, autofocus: true, class: 'form-control form-input', placeholder: 'Email' %>
              <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %>
              <%= f.password_field :password, autocomplete: 'off', autofocus: true, class: 'form-control form-input', placeholder: 'Password' %>
              <%= f.password_field :password_confirmation, autocomplete: 'off', autofocus: true, class: 'form-control form-input', placeholder: 'Confirm password' %>

              <% if devise_mapping.rememberable? -%>
                <br/>
                <div>
                  <%= f.check_box :remember_me %> <%= f.label :remember_me %>
                </div>
              <% end -%>

              <br/>

              <%= f.submit "Sign up", class: 'btn btn-lg btn-success btn-block' %>

              <br/>

              <%= render "devise/shared/links" %>
            </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="http://mymaplist.com/js/vendor/TweenLite.min.js"></script>
