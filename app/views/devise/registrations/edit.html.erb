<div class="row topic-form">
    <h1 class="robotoSlab text-center">Edit <%= resource_name.to_s.humanize %></h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal col-md-offset-3 col-md-6" }) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
            <%= f.label :name, :class => "col-md-2 control-label" %>
            <div class="col-md-10">
                <%= f.text_field :name, autofocus: true, :class => "form-control" %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :email, :class => "col-md-2 control-label" %>
            <div class="col-md-10">
                <%= f.email_field :email, autofocus: true, :class => "form-control" %>
            </div>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="form-group">
            <%= f.label :password, :class => "col-md-2 control-label" %>
            <div class="col-md-10">
                <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :password_confirmation, :class => "col-md-2 control-label" %>
            <div class="col-md-10">
                <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :current_password, :class => "col-md-2 control-label" %>
            <div class="col-md-10">
                <%= f.password_field :current_password, autocomplete: "off", :class => "form-control" %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :tagline, :class => "col-md-2 control-label" %>
            <div class="col-md-10">
                <%= f.text_field :tagline, autofocus: true, :class => "form-control" %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :bio, :class => "col-md-2 control-label" %>
            <div class="col-md-10">
                <%= f.text_area :bio, autofocus: true, :class => "form-control" %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :avatar, :class => "col-md-2 control-label" %>
            <div class="col-md-10">
                <%= f.file_field :avatar, autofocus: true, :class => "form-control" %>
                <%= f.hidden_field :avatar_cache %>
                <br/>
                <%= image_tag(@user.avatar.thumb.url) if @user.avatar? %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :remove_avatar, :class => "col-md-2 control-label" do %>
                Remove Avatar <i class="glyphicon glyphicon-question-sign" data-toggle="tooltip" data-placement="top" title="Check if you would like to remove your custom image and fall back to the gravatar image associated with your email."></i>
            <% end %>
            <div class="col-md-10">
                <%= f.check_box :remove_avatar, autofocus: true %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :allow_contact, :class => "col-md-2 control-label" do %>
                Allow Contact <i class="glyphicon glyphicon-question-sign" data-toggle="tooltip" data-placement="top" title="Allow people to use the web form to contact you via email.  Your email will not be displayed anywhere."></i>
            <% end %>
            <div class="col-md-10">
                <%= f.check_box :allow_contact, autofocus: true %>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6 col-md-offset-4">
                <%= f.submit "Update", :class => "btn btn-primary" %>
            </div>
        </div>
    <% end %>
</div>

<div class="row">
    <h3 class="robotoSlab text-center">Unhappy?</h3>
    <p class="col-md-12 text-center">
        If you are unhappy with your account and would like to remove it
        permanently from this site, you can do so by clicking the button below.
    </p>
    <div class="form-group row">
        <div class="col-md-6 col-md-offset-4">
            <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure you want to cancel your account?" }, method: :delete, class: "btn btn-danger" %>
        </div>
    </div>
</div>
