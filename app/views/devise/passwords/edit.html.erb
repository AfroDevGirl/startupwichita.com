<div class="row topic-form">
    <h1 class="robotoSlab text-center">Change your password</h1>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-horizontal" }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
            <%= f.label :password, "New password", :class => "col-md-2 col-md-offset-2 control-label" %>
            <div class="col-md-6">
                <%= f.password_field :password, autofocus: true, autocomplete: "off", :class => "form-control" %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :password_confirmation, "Confirm new password", :class => "col-md-2 col-md-offset-2 control-label" %>
            <div class="col-md-6">
                <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6 col-md-offset-4">
                <%= f.submit "Change my password", :class => "btn btn-primary" %>
            </div>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>
</div>
