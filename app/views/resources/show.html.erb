<section class="alternate">
    <% content_for :utility_bar do %>
        <%= link_to new_resource_path, :class => "btn pull-right" do %>
            Add Resource <i class="glyphicon glyphicon-plus"></i>
        <% end %>

        <% if can_edit?(@resource) %>
            <%= link_to resource_path(@resource), :data => { :confirm => "Are you sure you want to delete this resource?" }, :method => :delete, :class => "btn pull-right" do %>
                Remove Resource <i class="glyphicon glyphicon-trash"></i>
            <% end %>

            <%= link_to edit_resource_path(@resource), :class => "btn pull-right" do %>
                Edit Resource <i class="glyphicon glyphicon-edit"></i>
            <% end %>
        <% end %>
    <% end %>

    <div class="row">
        <h2 class="robotoSlab"><%= @resource.title %></h2>
        <span>Posted by: <%= @resource.user.name %></span> on
        <span><%= @resource.created_at %></span>
    </div>

    <div class="row">
        <p class="description"><%= @resource.content %></p>
    </div>
</section>
