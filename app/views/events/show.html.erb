<section class="alternate">
    <% content_for :utility_bar do %>
        <%= link_to new_event_path, :class => "btn pull-right" do %>
            Add Event <i class="glyphicon glyphicon-plus"></i>
        <% end %>

        <% if can_edit?(@event) %>
            <%= link_to event_path(@event), :data => { :confirm => "Are you sure you want to delete this event?" }, :method => :delete, :class => "btn pull-right" do %>
                Remove Event <i class="glyphicon glyphicon-trash"></i>
            <% end %>

            <%= link_to edit_event_path(@event), :class => "btn pull-right" do %>
                Edit Event <i class="glyphicon glyphicon-edit"></i>
            <% end %>
        <% end %>

    <% end %>

    <div class="col-sm-10 col-sm-offset-1">
      <div class="row">
          <h2 class="robotoSlab"><%= @event.title %></h2>
          <span>Posted by: <%= @event.user.person.full_name %></span> on
          <span><%= @event.created_at.to_time.strftime('%B %d, %Y') %></span>
          <h3><%= @event.starts_at.to_time.strftime('%A, %B %d, %Y %I:%M %p') %> - <%= @event.ends_at.to_time.strftime('%A, %B %d, %Y %I:%M %p') %></h3>
          <h3>
              <%= @event.address %>
          </h3>
      </div>
      <div class="row">
        <p class="description"><%= @event.content %></p>
      </div>
      <div class="row">
        <div class="col-sm-3 col-sm-offset-7">
          <% unless @event.url.blank? %>
            <a class="btn btn-success" href="<%= @event.url %>">Tell me more...</a>
            <% end %>
          </div>
      </div>
    </div>

    <%= render partial: 'topics/disqus' %>
</section>