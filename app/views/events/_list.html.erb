<% unless events.blank? %>

    <ul class="alternate list-unstyled">
        <% events.each do |event| %>
            <li>
                <div class="row">
                    <h2 class="robotoSlab">
                        <%= link_to event_path(event) do %>
                            <%= event.title %>
                        <% end %>
                    </h2>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <dl>
                            <dt>Location</dt>
                            <dd><a target="_blank" href="http://maps.google.com/?q=<%= event.address %>"><%= event.address %></a></dd>
                            <dt>Starting at:</dt>
                            <dd><%= event.starts_at.to_time.strftime('%A, %B %d, %Y %H:%M') %></dd>
                            <dt>Ending at:</dt>
                            <dd><%= event.ends_at.to_time.strftime('%A, %B %d, %Y %H:%M') %></dd>
                        </dl>
                    </div>
                    <div class="col-md-10">
                        <%= simple_format(event.content) %>
                        <%= event.event_url %>
                          HI
                    </div>
                </div>
            </li>
        <% end %>
    </ul>

<% else %>
    <div class="alternate">
        <p class="row">
            No events yet. Why don't you <%= link_to "add some", new_event_path %>?
        </p>
    </div>
<% end %>
