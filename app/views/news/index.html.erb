<section>
  <div class="form-inline util-bar">
    <%= link_to new_news_path, :class => "btn pull-right" do %>
      Add News <i class="glyphicon glyphicon-plus"></i>
    <% end %>
  </div>

  <% unless @news.blank? %>
    <ul class="alternate list-unstyled">
      <% @news.each do |newsItem| %>
        <li data-ng-repeat="newsItem in news">
          <div class="row">
            <div class="col-md-2">
              <h2 class="robotoSlab">
                <%= link_to news_path(newsItem) do %>
                  <%= newsItem.title %>
                <% end %>
                </a>
              </h2>
            </div>
            <div class="col-md-10">
              <p class="description">
                <%= newsItem.content %>
              </p>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <div class="alternate">
      <p class="row">
        No news yet. Why don't you <%= link_to "add some", new_news_path %>?
      </p>
    </div>
  <% end %>
</section>
