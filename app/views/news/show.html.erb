<section class="alternate">
    <% content_for :utility_bar do %>
        <%= link_to new_news_path, :class => "btn pull-right" do %>
            Add News <i class="glyphicon glyphicon-plus"></i>
        <% end %>

        <% if can_edit?(@news) %>
            <%= link_to news_path(@news), :data => { :confirm => "Are you sure you want to delete this news?" }, :method => :delete, :class => "btn pull-right" do %>
                Remove News <i class="glyphicon glyphicon-trash"></i>
            <% end %>

            <%= link_to edit_news_path(@news), :class => "btn pull-right" do %>
                Edit News <i class="glyphicon glyphicon-edit"></i>
            <% end %>
        <% end %>
    <% end %>

    <div class="row">
        <h2 class="robotoSlab"><%= link_to @news.title, @news.url %></h2>
        <span>Posted by: <%= @news.user.person.full_name %></span> on
        <span><%= @news.created_at.strftime('%B %C, %Y') %></span>
    </div>

    <div class="row">
      <div class="col-md-12">
        <p class="description"><%= @news.content %></p>
      </div>
      <% unless @news.url.blank? %><br /><br />
      <div class="col-md-2 col-md-offset-8">
        <%= link_to @news.title, @news.url, :class => "btn btn-success pull-right" %>
      </div>
      <% end %>
    </div>

    <%= render partial: 'topics/disqus' %>
</section>
